{
  "name": "Chalga Meter",
  "version": "1.0",
  "description": "How chalga are you?",
  "background": {
      "scripts": ["../shared/utils/background.js"],
      "persistent": false
  },
  "browser_action": {
      "default_popup": "index.html"
  },
  "permissions": [
      "https://*.youtube.com/*",
      "http://*.youtube.com/*",
      "https://*.google.com/*",
      "http://*.google.com/*",
      "https://*.vbox7.com/*",
      "http://*.vbox7.com/*",
      "tabs",
      "activeTab",
      "storage",
      "webNavigation"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "../src/assets/images/icon-16.png",
    "48": "../src/assets/images/icon-48.png",
    "128": "../src/assets/images/icon-128.png"
  },
  "manifest_version": 2
}
